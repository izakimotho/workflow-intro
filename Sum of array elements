using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.IO;

namespace ConsoleApplication1
{
    class SumOfArrays
    {

        static void Main(string[] args)
        {
          //call the array calculate sum function
          sumArray();
          Console.ReadLine();
        }

        static void sumArray()
        {
          int sum=0,n,i=0; //initialize variables
          Console.Write ("Enter number of data points:");// request user input
          n=int.Parse(Console.ReadLine()) ;//convert user input to int though the parse funct
          int[] arr=new int[n];//initialize array ellemnt
          //use the do loop to run through the array elements as we get the sum of elemnt values
            do{
                 Console.Write ("Values[{0}",i+"]:");
                 arr[i]=int.Parse (Console.ReadLine() ) ;
                 sum+=arr[i];
                 i+=1;
              } while(i<n);
          Console.WriteLine ("Total:{0}",sum); //print sum of elements 
        }


      }
}